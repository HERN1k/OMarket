<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="/home/app/logs/internal-nlog-AspNetCore.txt">

    <extensions>
        <add assembly="NLog.Web.AspNetCore"/>
    </extensions>

    <targets>

        <target xsi:type="File"
            name="file"
            fileName="/home/app/logs/error-log.txt"
            layout="${longdate} ${uppercase:${level}} ${message} ${exception:format=ToString,StackTrace}"
            keepFileOpen="true"
            concurrentWrites="true"
            encoding="utf-8" />

        <target xsi:type="ColoredConsole"
            name="console"
            layout="${level:uppercase=true}&#x9;${logger:shortName=true}&#x9;${message}"
            useDefaultRowHighlightingRules="true">
            <highlight-row condition="level == LogLevel.Trace" foregroundColor="DarkGray"/>
            <highlight-row condition="level == LogLevel.Debug" foregroundColor="Gray"/>
            <highlight-row condition="level == LogLevel.Info" foregroundColor="White"/>
            <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow"/>
            <highlight-row condition="level == LogLevel.Error" foregroundColor="Red"/>
            <highlight-row condition="level == LogLevel.Fatal" foregroundColor="DarkRed"/>
        </target>

        <target xsi:type="ColoredConsole"
            name="queries"
            layout="${message}&#x9;${time}"
			useDefaultRowHighlightingRules="true">
            <highlight-row condition="level == LogLevel.Info" foregroundColor="Gray"/>
        </target>

        <target xsi:type="ColoredConsole"
            name="initialization"
            layout="${message}"
			useDefaultRowHighlightingRules="true">
            <highlight-row condition="level == LogLevel.Info" foregroundColor="Yellow"/>
        </target>

    </targets>

    <rules>
        <logger name="System.*" finalMinLevel="Warn" />
        <logger name="Microsoft.*" finalMinLevel="Warn" />
        <logger name="Microsoft.Hosting.Lifetime*" finalMinLevel="Info"/>
        <!--<logger name="TourneyPulse.Middlewares.LogFactoryMiddleware" writeTo="queries" final="true"/>-->

        <logger name="*" minlevel="Error" writeTo="file" />

        <!--<logger name="TourneyPulse.Tools.Application.AppConfigurator" minlevel="Info" writeTo="initialization" final="true">
            <filters>
                <when condition="contains('${event-properties:item=EventId}', '0')" action="Log" />
            </filters>
        </logger>-->

        <logger name="*" minlevel="Trace" writeTo="console" />
    </rules>

</nlog>